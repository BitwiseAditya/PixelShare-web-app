<body>
  <div class="container">
    <div class="content">
      <!--pinterest logo-->
      <p class="header">Welcome to PixelShare !</p>

      <form action="/register" method="post">
        <input type="email" name="email" placeholder="email" class="detail" /><br />
        <input type="text" name="username" placeholder="username" class="detail" /><br />
        <input type="text" name="fullname" placeholder="full name" class="detail" /><br />
        <input type="password" name="password" placeholder="Password" class="detail" /><br />
        <input type="submit" value="Register Acoount" class="btn int" />
      </form>

      <a href="/login" class="btn int btn-like">Already on PixelShare?Log in</a>

      <footer>
        <p>
          Project created by :  
          <b>Aditya Jugran</b>
        </p> 
      </footer>
    </div>
  </div>
